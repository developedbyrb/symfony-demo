{% extends 'base.html.twig' %}

{% block body %}

<div id="wrapper" class="pt-5">
    <div id="container">
        <div style="position: relative;">
            <h2 class="page-header">Latest Todos</h2>
            <a href="todos/create" class="btn btn-success" style="position:absolute; right: 10px; top:5px;">Create Todo</a>
        </div>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">To do</th>
                    <th scope="col">Due Date</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {% for item in todos %}
                    <tr>
                        <th scope="row">{{ item.id }}</th>
                        <td>{{ item.name }}</td>
                        <td>{{ item.dueDate|date('F j, g:i: a') }}</td>
                        <td>
                            <a href="todos/details/{{item.id}}" class="btn btn-primary">View</a>
                            <a href="todos/edit/{{item.id}}" class="btn btn-warning">Edit</a>
                            <a href="todos/delete/{{item.id}}" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}